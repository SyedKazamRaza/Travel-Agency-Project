<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="./materialize.min.css">
    <link rel="stylesheet" href="./adminS.css">
    <title>Edit Locations</title>
</head>
<body>
    <a class="btn-floating btn-large waves-effect waves-light back" href="/adminPanel"><img
        src="./ASSETS/icons/back.png" alt=""></a>    
        <h1 class="kalaBanda">Select The location To Edit</h1>
    <form class="formLocationSearch" method="POST">
        <div class="input-field col s12">
            <input id="name" type="text" name="name" required class="validate">
            <label for="name">Search With Name</label>
        </div>
        <button class="waves-effect waves-light btn-large signinbutton" type="submit">Search</button>
    </form>
    <div class="editLocation">
        <%locations.forEach(location => {%>
            <a href="editLocationNow?id=<%=location.LocationID%>" class="location">
            <h2>Location Name: <b><%=location.LocName%></b></h2>
            <h2>Country Name: <b><%=location.country%></b></h2>
            <h2>Base Price: <b><%=location.BasePrice%></b></h2>
            <h2>Price Per Day <b><%=location.CostPerDay%></b></h2>
        </a>
        <%});%>   
    </div>
    <script src="./materialize.min.js"></script>
</body>
</html>