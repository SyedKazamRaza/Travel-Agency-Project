<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="./materialize.min.css">
    <link rel="stylesheet" href="./styles.css">
    <title>Traveler Panel</title>
</head>

<body>
    <div class="forBackRegister">
        <a class="btn-floating btn-large waves-effect waves-light red" href="./adminPanelAgent"><img
                src="./ASSETS/icons/back.png" alt=""></a>
        <br><br><br>
        <div class="regForm">
            <h3>Edit Agent</h3>
            <form method="POST" class="row regFormInside">
                <div class="input-field col s12">
                    <input id="FName" type="text" name="fname" value="<%=details[0].FName%>" class="validate">
                    <label for="FName">First Name</label>
                </div>
                <div class="input-field col s12">
                    <input id="LName" type="text" name="lname" value="<%=details[0].LName%>" class="validate">
                    <label for="LName">Last Name</label>
                </div>
                <div class="input-field col s12">
                    <input id="House" type="number" name="house" value="<%=details[0].House%>" class="validate">
                    <label for="House">House No</label>
                </div>
                <div class="input-field col s12">
                    <input id="Street" type="text" name="street" value="<%=details[0].Street%>" class="validate">
                    <label for="Street">Street No</label>
                </div>
                <div class="input-field col s12">
                    <input id="Block" type="text" name="block" value="<%=details[0].Block%>" class="validate">
                    <label for="Block">Block</label>
                </div>
                <div class="input-field col s12">
                    <input id="City" type="text" name="city" value="<%=details[0].City%>" class="validate">
                    <label for="City">City</label>
                </div>
                <div class="input-field col s12">
                    <input id="Country" type="text" name="country" value="<%=details[0].Country%>" class="validate">
                    <label for="Country">Country</label>
                </div>
                <div class="input-field col s12">
                    <input id="salary" type="number" name="sal" value="<%=parseFloat(details[0].Sal)%>" class="validate">
                    <label for="salary">Base Salary</label>
                </div>
                <div class="input-field col s12">
                    <input id="comm" type="number" name="commRate" value="<%=parseFloat(details[0].CommPerPerson)%>" class="validate">
                    <label for="comm">Commision Rate</label>
                </div>
                <div class="input-field col s12">
                    <input id="phone" type="number" name="phone" value="<%=details[0].PhoneNo%>" required class="validate">
                    <label for="phone">Phone no</label>
                </div>
                <div class="input-field col s12">
                    <input id="email" type="email" name="email" value="<%=details[0].Email%>" required class="validate">
                    <label for="email">Email ID</label>
                </div>
                <div class="input-field col s12">
                    <select name="location">
                        <option value="" disabled>Choose your option</option>
                        <%locations.forEach(location => {%>
                        <%if(location.LocationID == details[0].LocationID){%>
                        <option value="<%=location.LocationID%>" selected><%=location.LocName%></option>
                        <%}else{%>
                            <option value="<%=location.LocationID%>"><%=location.LocName%></option>
                        <%}});%>
                    </select>
                    <label>Select Location</label>
                </div>
                <button class="waves-effect waves-light btn-large signinbutton" type="submit"
                    href="./adminPanelAgent">Save the Edit</button>
            </form>
        </div>
        <br><br><br>

    </div>
    <script src="./materialize.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var elems = document.querySelectorAll('select');
            var instances = M.FormSelect.init(elems);
        });
        document.addEventListener('DOMContentLoaded', function () {
            var elems = document.querySelectorAll('.datepicker');
            var instances = M.Datepicker.init(elems);
        });
    </script>

</body>

</html>