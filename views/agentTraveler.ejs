<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="./materialize.min.css">
    <link rel="stylesheet" href="./ASSETS/fontAwesome/css/all.css">
    <link href="./agent.css" rel="stylesheet" type="text/css">
    <title>Travel Agency Database</title>
</head>

<body>

    <a class="btn-floating btn-large waves-effect waves-light red" href="/agentPanel"><img src="./ASSETS/icons/back.png"
            alt=""></a>


    <div id="adminTravelerPanel">
        <h1>Traveller Option</h1>
        <div id="moreOptionAgent">
            <a href="/agentTravelerAll">Show All Connected To Me</a>
            <a href="/agentTravelerNAtt">Show Travellers Without Services Attached</a>
            <a href="agentTravelerAtt">Show Travellers With Services Attached</a>
        </div>
        <form method="POST" class="SearchFields">
            <div class="input-field col s12">
                <input id="byID" type="number" name="id" class="validate">
                <label for="byID">Search By ID</label>
            </div>
            <div class="input-field col s12">
                <input id="byName" type="text" name="name" class="validate">
                <label for="byName">Search By Name</label>
            </div>
            <div class="input-field col s12">
                <input id="byCNIC" type="number" name="CNIC" class="validate">
                <label for="byCNIC">Search By CNIC</label>
            </div>
            <button type="submit" class="waves-effect waves-light btn-large button">Search!</button>
            <%agentTraveler.forEach(traveler => {%>
            <div class="travelerDetails">
                <h2><%=traveler.CustomerID%></h2>
                    <h2><%=traveler.FName%></h2>
                    <h2><%=traveler.LName%></h2>
                    <h2><%=traveler.CNIC%></h2>
                <a href="/agentEditTraveller?id=<%=traveler.CustomerID%>&loc=<%=traveler.LocationID%>"> <i style="font-size: 35px; color: tomato" class="fas fa-plus-square"></i></a>
                <a href="/showTravellerToAgent?id=<%=traveler.CustomerID%>&loc=<%=traveler.LocationID%>"><i class="fas fa-arrow-circle-right"></i></a>
            </div>
            <%});%>
        </div>
            
      

    

    <script src="./materialize.min.js"></script>
</body>

</html>